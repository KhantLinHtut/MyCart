<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="180dp"
    android:id="@+id/cardView"
    android:elevation="5dp"
    app:cardCornerRadius="5dp"
    android:layout_marginTop="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:scaleType="fitCenter"
        />
    <TextView
        android:id="@+id/type"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toRightOf="@id/image"
        app:layout_constraintBaseline_toBaselineOf="@id/image"
        />
    <TextView
        android:id="@+id/price"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/type"
        app:layout_constraintLeft_toRightOf="@+id/image"
        />
    <Button
        android:id="@+id/discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discount"
        app:layout_constraintLeft_toRightOf="@id/type"
        app:layout_constraintBaseline_toBaselineOf="@id/type"
        app:layout_constraintRight_toRightOf="parent"
        />
    <Button
        android:id="@+id/minus"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="-"
        app:layout_constraintRight_toLeftOf="@id/weight"
        app:layout_constraintTop_toBottomOf="@id/price"
        app:layout_constraintLeft_toRightOf="@id/image"
        android:background="@drawable/rounded"/>
    <TextView
        android:id="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/minus"
        app:layout_constraintBaseline_toBaselineOf="@id/minus"
        app:layout_constraintRight_toLeftOf="@id/plus"
        />
    <Button
        android:id="@+id/plus"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="+"
        app:layout_constraintBaseline_toBaselineOf="@id/minus"
        app:layout_constraintLeft_toRightOf="@id/weight"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/rounded"
        />



</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>